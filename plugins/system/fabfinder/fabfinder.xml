<?xml version="1.0" encoding="utf-8"?>
<install version="1.7" type="plugin" group="system" method="upgrade">
	<name>System - FabFinder</name>
	<author>Fabrikar.com</author>
	<creationDate>Sept 2011</creationDate>
	<copyright>Copyright (C) 2005 - 2011 Pollen 8 Design Ltd. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>rob@pollen-8.co.uk</authorEmail>
	<authorUrl>www.pollen-8.co.uk</authorUrl>
	<version>1.0 Alpha</version>
	<description>Modular admin search</description>
	<files>
		<filename plugin="fabfinder">fabfinder.php</filename>
		<folder>defines</folder>
		<folder>fields</folder>
	</files>
	<config>
		<fields name="params">

			<fieldset name="basic" >
			
				<field name="adaptors" type="filelist"
					directory="plugins/system/fabfinder/adaptors/"
					hide_default="true"
					stripext="true"
					hide_none="true"
					size="20"
					multiple="true"
					description="PLG_FABFINDER_ADAPTORS_DESC"
					label="PLG_FABFINDER_ADAPTORS_LABEL" />
					
			</fieldset>
		</fields>
	</config>
</install>